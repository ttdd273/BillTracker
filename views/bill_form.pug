extends layout 

block content 
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Bill: 
        input#name.form-control(type='text' placeholder="Dinner, Movie, etc" name='name' value = (bill===undefined ? "" : bill.name))
    button.btn.btn-primary(type='submit') Submit 

  if errors
    ul 
      for error in errors 
        li!= error.msg