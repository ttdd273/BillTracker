extends layout 

block content 
    h1 #{title}

    form(method="POST" action="")
        div.form-group
            label(for='name') Payment: 
                input#name.form-control(type='text' placeholder='Hello' name='name' value=(payment===undefined ? "" : payment.name))
        button.btn.btn-primary(type="submit") Submit

    if errors
        ul 
            for error in errors 
                li!= error.msg