extends layout 

block content 
    h1 #{title}

    //- because action is "", we will send data to the same URL as the current page
    form(method="POST" action="")
        div.form-group
            label(for='bill') Bill:
                select#bill.form-control(type='select' placeholder="Select Bill to Pay" required="True")
                    option(value="" disabled selected) Select Bill to Pay
                        for bill in bills
                            option(value=bill.url) #{bill.name}
        div.form-group
            label(for='amount') Amount: 
                input#amount.form-control(type='number' min="0" placeholder='0' name='amount' value=(payment===undefined ? "" : payment.amount))
        div.form-group
            label(for='payment_date') Payment Date: 
                input#payment_date.form-control(type='date' name='amount' required value=(payment===undefined ? "" : payment.payment_date))
        div.form-group
            label(for="payment_method") Payment Method: 
                select#payment_method.form-control(type='select' placeholder="Select Payment Method" required='true')
                    option(value="" disabled selected) Select Method
                    for method in payment_methods
                        option(value=method) #{method}

        button.btn.btn-primary(type="submit") Submit

    if errors
        ul 
            for error in errors 
                li!= error.msg